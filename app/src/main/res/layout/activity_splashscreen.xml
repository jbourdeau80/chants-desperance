<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold"
    android:orientation="vertical"
    tools:context=".Activities.SplashScreenActivity">

    <!--on below line we are adding an image view-->

    <!--    on below line we are creating progress bar-->


    <ImageView
        android:id="@+id/idIVLogo"
        android:layout_width="136dp"
        android:layout_height="147dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@mipmap/logo_chants"
        android:visibility="visible" />

    <TextView
        android:id="@+id/idHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVLogo"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/chant_d_esperance"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>